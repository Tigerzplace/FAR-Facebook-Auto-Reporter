

{
   "author": "Ã‘asir Ali",
  
		"background": {
						"scripts": ["js/background.js"]
					  },
   "browser_action": {
      "default_icon": "icons/128.png",
      "default_popup": "html/frame.html",
      "default_title": "Auto Reporter"
   },
   "content_scripts": [ {
      "js": ["js/content.js"],
      "matches": [  "*://*.facebook.com/*"  ],
	  "run_at": "document_end"
   } ],
   "description": "Auto Reporter is a reporter which can be used to report facebook (Accounts/Groups/Pages) automatically. ",
   "icons": {
      "128": "icons/128.png",
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
   },
   
   "version": "1.8",
   "manifest_version": 2,
   "short_name": "FAR",
   "name": "Auto Reporter ",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "permissions": ["*://*.facebook.com/*" ,"*://*.hackology.co/*" ,"*://*.tinyurl.com/*" , "*://*.bitly.com/*" , "notifications","activeTab"],
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com ; object-src 'self' "
   
                              
   
}
